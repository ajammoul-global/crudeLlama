models/base/
models/fine-tunned/*/adapter_model.safetensors
models/fine-tunned/*/pytorch_model.bin
*.bin
*.pt
*.pth
checkpoint-*/

# Data files (will load on Kaggle)
data/raw/*.csv

# Python
__pycache__/
*.pyc
*.pyo
*.egg-info/
.pytest_cache/
env/
venv/

# OS
.DS_Store
Thumbs.db

# Logs
*.log
wandb/

